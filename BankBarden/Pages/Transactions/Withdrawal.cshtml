@page
@model BankBarden.Pages.Transactions.WithdrawalModel
@{
}


<div class="add-top-padding">
    <div class="container">

        <h1>Withdrawal</h1>
        <h2>Account: @Model.AccountId Balance: @Model.Balance</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input class="form-control" asp-for="Amount" />
                <span class="field-validation-error" asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label asp-for="WithdralDate">Date</label>
                <input class="form-control" asp-for="WithdralDate" />
                <span class="field-validation-error" asp-validation-for="WithdralDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment">Comment</label>
                <input class="form-control" asp-for="Comment" />
                <span class="field-validation-error" asp-validation-for="Comment"></span>
            </div>
            <button type="submit" class="btn btn-primary">Withdraw</button>
        </form>

    </div>
</div>