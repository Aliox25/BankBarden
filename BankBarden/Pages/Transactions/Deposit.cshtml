@page
@model BankBarden.Pages.Transactions.DepositModel
@{
}

<div class="add-top-padding">
    <div class="container body-container">

        <h1>Deposit</h1>
        <h2>Account: @Model.AccountId Balance: @Model.Balance</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input class="form-control" asp-for="Amount" />
                <span class="field-validation-error" asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepositDate">Date</label>
                <input class="form-control" asp-for="DepositDate" />
                <span class="field-validation-error" asp-validation-for="DepositDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment">Comment</label>
                <input class="form-control" asp-for="Comment" />
                <span class="field-validation-error" asp-validation-for="Comment"></span>
            </div>

            <div class="mb-3 d-flex py-2 justify-content-start">

                <button type="submit"
                        class="btn btn-primary mx-1"
                        style="width:120px">
                    Deposit
                </button>


                <a asp-page="/Customerinfo"
                   asp-route-custId="@Model.CustomerId"
                   class="btn btn-secondary mx-1"
                   style="width:120px">
                    Go Back
                </a>

            </div>

        </form>

    </div>
</div>
@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial" />
}
