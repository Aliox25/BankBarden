@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Masthead-->
<header class="masthead">
    <div class="add-top-padding add-bot-padding">
        <div class="container">
            <div class="masthead-heading">Welcome To BankBarden</div>
            <div class="masthead-subheading text-uppercase">We hope you have a wonderful day</div>
        </div>
    </div>
</header>

<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Country</h2>
            <h3 class="section-subheading text-muted">Here are different countries that BankBarden have customers from.</h3>
        </div>
        <div class="row">
            @foreach (var country in Model.Countries)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                        @if (User.IsInRole("Cashier"))
                        {
                            <a class="portfolio-link nav-link" asp-page="Customers" asp-route-country="@country.Country">
                                <partial name="_countryLinks" model="country" />
                            </a>
                        }
                        else 
                        {
                            <a class="portfolio-link nav-link" asp-page="Top10Customers" asp-route-country="@country.Country">
                                <partial name="_countryLinks" model="country" />
                            </a>
                        }
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@country.Country</div>
                            <div class="portfolio-caption-subheading text-muted">@country.UserCount</div>
                            <div class="portfolio-caption-subheading text-muted">@country.CountryTotalMoney Kr</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


