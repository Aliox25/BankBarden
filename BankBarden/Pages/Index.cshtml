@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>test</h1>
<!-- Masthead-->
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome To BankBarden</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
    </div>
</header>

<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Country</h2>
            <h3 class="section-subheading text-muted">Hear are difrent countrys that BankBarden have coustomers from.</h3>
        </div>
        <div class="row">
            @foreach (var coun in Model.Countries)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                        <a class="portfolio-link nav-link" asp-area="" asp-page="/Customers" asp-route-coun="@coun.Country">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="assets/img/portfolio/1.jpg" alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@coun.Country</div>
                            <div class="portfolio-caption-subheading text-muted">@coun.UserCount</div>
                            <div class="portfolio-caption-subheading text-muted">@coun.CountryTotalMoney Kr</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


