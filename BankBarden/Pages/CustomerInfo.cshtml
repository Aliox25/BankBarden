@page
@model BankBarden.Pages.CustomerInfoModel
@{
}

<div class="add-top-padding">
    <div class="container">
        <div class="box-border">
            <h1>@Model.Customer.FirstName   @Model.Customer.LastName    @Model.Customer.Id</h1>
            <h2>@Model.Customer.Balance Kr</h2>

            <a class="btn btn-primary add-smal-pading-around" asp-route-custumarId="@Model.Customer.Id" asp-area="" asp-page="/CustomerCRUD/EditCustomer">Edit Customer</a>
        </div>

        <div class="box-border">
            <h3>Accounts</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Balance</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.Id</td>
                            <td>@account.Balance Kr</td>
                            <td>
                                <a asp-page="/Transactions/Deposit" asp-route-accountId="@account.Id" asp-route-customerId="@Model.Customer.Id"><i class="fa-solid fa-angle-up"></i></a>
                            </td>
                            <td>
                                <a asp-page="/Transactions/Withdrawal" asp-route-accountId="@account.Id" asp-route-customerId="@Model.Customer.Id"><i class="fa-solid fa-angle-down"></i></a>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>